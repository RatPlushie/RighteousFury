<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Tab1MasterScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:padding="10dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:id="@+id/Tab1MasterLinerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/CharacterNameCard"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="4dp"
            app:cardBackgroundColor="@color/cardPrimary">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/NameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/character_Name"
                    android:textColor="@color/textPrimary"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/CharacterNameEditText"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="1dp"
                    android:gravity="center|start"
                    android:inputType="text"
                    android:textAlignment="textStart"
                    android:textColor="@color/textPrimary"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/NameTextView"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/HPFPCardLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/HPCard"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/cardPrimary">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/HPStatName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:text="@string/hp"
                        android:textColor="@color/textPrimary"
                        android:textStyle="bold"
                        app:autoSizeTextType="none"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/HPFractionTop"
                        android:layout_width="40dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="1dp"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textColor="@color/textPrimary"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/HPFractionDivider"
                        app:layout_constraintStart_toEndOf="@+id/HPStatName"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/HPFractionDivider"
                        android:layout_width="40dp"
                        android:layout_height="1dp"
                        android:layout_marginStart="20dp"
                        android:background="@color/textPrimary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/HPStatName"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/HPFractionMax"
                        android:layout_width="40dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="1dp"
                        android:ems="10"
                        android:hint="@string/maxhp_hint"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:textColor="@color/textPrimary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/HPStatName"
                        app:layout_constraintTop_toBottomOf="@+id/HPFractionDivider" />

                    <ImageButton
                        android:id="@+id/HPDamageButton"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginEnd="2dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/damage_desc"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/HPHealButton"
                        app:srcCompat="@drawable/ic_down_arrow" />

                    <ImageButton
                        android:id="@+id/HPHealButton"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginEnd="2dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/heal_desc"
                        app:layout_constraintBottom_toTopOf="@+id/HPDamageButton"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_up_arrow" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/FPCard"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/cardPrimary">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/FPStatName"
                        android:layout_width="45dp"
                        android:layout_height="34dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:maxLines="2"
                        android:minLines="2"
                        android:text="@string/fp"
                        android:textColor="@color/textPrimary"
                        android:textStyle="bold"
                        app:autoSizeTextType="none"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/FPFractionTop"
                        android:layout_width="40dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="1dp"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textColor="@color/textPrimary"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/FPFractionDivider"
                        app:layout_constraintStart_toEndOf="@+id/FPStatName"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/FPFractionDivider"
                        android:layout_width="40dp"
                        android:layout_height="1dp"
                        android:layout_marginStart="20dp"
                        android:background="@color/textPrimary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/FPStatName"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/FPFractionMax"
                        android:layout_width="40dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="1dp"
                        android:ems="10"
                        android:hint="@string/maxfp_hint"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:textColor="@color/textPrimary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/FPStatName"
                        app:layout_constraintTop_toBottomOf="@+id/FPFractionDivider" />

                    <ImageButton
                        android:id="@+id/FPDownButton"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginEnd="2dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/fp_down_desc"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/FPUpButton"
                        app:srcCompat="@drawable/ic_down_arrow" />

                    <ImageButton
                        android:id="@+id/FPUpButton"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginEnd="2dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/fp_up_desc"
                        app:layout_constraintBottom_toTopOf="@+id/FPDownButton"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_up_arrow" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/WSCardLayout"
