                        app:srcCompat="@mipmap/ic_launcher_round" />

                    <EditText
                        android:id="@+id/AGStatValue"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="4dp"
